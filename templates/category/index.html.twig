{% extends 'backendbase.html.twig' %}

{% block title %}Category index
{% endblock %}
{% block pagetitle %}Liste des categories
{% endblock %}
{% block body %}
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Family</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					<td>{{ category.id }}</td>
					<td>{{ category.name }}</td>
					<td>{{ category.family }}</td>
					<td>
						<a href="{{ path('category_show', {'id': category.id}) }}">Afficher</a>
						<a href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('category_new') }}">Create new</a>
{% endblock %}
