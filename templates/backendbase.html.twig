<!doctype html>
<html lang="fr">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>Backend · DWWM 13</title>

		{% block stylesheets %}
			{{ encore_entry_link_tags('back') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('back') }}
		{% endblock %}
	</head>
	<body>

		<header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
			<a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="{{path('home')}}">Backend · DWWM 13</a>
			<button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<input class="form-control form-control-dark w-100" type="text" placeholder="Rechercher" aria-label="Search">
			<div class="navbar-nav">
				<div class="nav-item text-nowrap">
					<a class="nav-link px-3" href="{{path('app_logout')}}">Déconnexion</a>
				</div>
			</div>
		</header>
		
		<div class="container-fluid">
			<div class="row">
				<nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
					<div class="position-sticky pt-3">
						{% if is_granted("ROLE_STOCK") %}
							<h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
								<span>Gestion de stock</span>
								<span data-feather="plus-circle"></span>
							</h6>
							<ul class="nav flex-column">
								<li class="nav-item">
									<a class="nav-link" aria-current="page" href="{{path('category_index')}}">
										<span data-feather="home"></span>
										Liste des catégories
									</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{path('category_new')}}">
										<span data-feather="file"></span>
										Ajouter une catégorie
									</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{path('product_index')}}">
										<span data-feather="shopping-cart"></span>
										Liste des produits
									</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{path('product_new')}}">
										<span data-feather="users"></span>
										Ajouter un produit
									</a>
								</li>
							</ul>
						{% endif %}

						{% if is_granted("ROLE_ADMIN") %}
							<h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
								<span>Utilisateurs</span>
								<span data-feather="plus-circle"></span>
							</h6>
							<ul class="nav flex-column mb-2">
								<li class="nav-item">
									<a class="nav-link" href="{{path('listuser')}}">
										<span data-feather="file-users"></span>
										Liste des utilisateurs
									</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{path('adduser')}}">
										<span data-feather="users"></span>
										Ajouter un utilisateur
									</a>
								</li>
							</ul>
						{% endif %}

					</div>
				</nav>

				<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
					<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
						<h1 class="h2"> {% block pagetitle %}{% endblock %}
							</h1>
						</div>
						{% block body %}{% endblock %}
					</main>
				</div>
			</div>
		</body>
	</html>
